FROM python:3.11-slim

WORKDIR /app

# Install system dependencies for C++ extension
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    libeigen3-dev \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install pybind11 for C++ bindings
RUN pip install --no-cache-dir pybind11

# Copy and install Python package
COPY pyproject.toml .
COPY src/ src/
COPY cpp/ cpp/
COPY CMakeLists.txt .

# Build C++ extension with CMake
RUN mkdir -p build && cd build && cmake .. && make -j4

# Install the Python package
# Set version for setuptools-scm (git not available in Docker)
ENV SETUPTOOLS_SCM_PRETEND_VERSION=2.0.0
RUN pip install --no-cache-dir build
RUN python -m build --wheel
RUN pip install --no-cache-dir dist/*.whl

# Store the C++ extension in a known location for the entrypoint to copy
RUN mkdir -p /opt/grillex_cpp && \
    cp src/grillex/_grillex_cpp*.so /opt/grillex_cpp/

# Install grillex runtime dependencies (from setup.cfg)
RUN pip install --no-cache-dir "numpy>=1.24.0" "scipy>=1.10.0" "pyyaml>=6.0" "pydantic>=2.0"

# Install webapp dependencies with reload support
RUN pip install --no-cache-dir fastapi uvicorn anthropic python-multipart pydantic-settings watchfiles

# Create entrypoint script that copies the .so file to the mounted volume
RUN echo '#!/bin/bash\n\
# Copy the C++ extension to the mounted src directory\n\
cp /opt/grillex_cpp/_grillex_cpp*.so /app/src/grillex/\n\
exec "$@"' > /entrypoint.sh && chmod +x /entrypoint.sh

EXPOSE 8000

ENTRYPOINT ["/entrypoint.sh"]
CMD ["uvicorn", "webapp.backend.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
